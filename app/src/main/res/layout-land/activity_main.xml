<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">
        <TextView
            android:id="@+id/tvResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toTopOf="parent"
            android:text=""
            android:textSize="80sp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/bClear"
            style="@style/buttonOperator"
            android:onClick="allClearAction"
            android:text="C"></Button>
        <Button
            android:id="@+id/bPlusMinus"
            style="@style/buttonNumber"
            android:onClick="onPlusMinusClicked"
            android:text="+/-"></Button>
        <Button
            android:id="@+id/bPercent"
            style="@style/buttonNumber"
            android:text="%"></Button>
        <Button
            android:id="@+id/bDivide"
            style="@style/buttonOperator"
            android:text="/"></Button>
        <Button
            android:id="@+id/bSin"
            style="@style/buttonOperator"
            android:text="sin"></Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/b7"
            style="@style/buttonNumber"
            android:text="7"></Button>
        <Button
            android:id="@+id/b8"
            style="@style/buttonNumber"
            android:text="8"></Button>
        <Button
            android:id="@+id/b9"
            style="@style/buttonNumber"
            android:text="9"></Button>
        <Button
            android:id="@+id/bMultiply"
            style="@style/buttonOperator"
            android:text="×"></Button>
        <Button
            android:id="@+id/bCos"
            style="@style/buttonOperator"
            android:text="cos"></Button>
    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/b4"
            style="@style/buttonNumber"
            android:text="4"></Button>
        <Button
            android:id="@+id/b5"
            style="@style/buttonNumber"
            android:text="5"></Button>
        <Button
            android:id="@+id/b6"
            style="@style/buttonNumber"
            android:text="6"></Button>
        <Button
            android:id="@+id/bSubtract"
            style="@style/buttonOperator"
            android:text="-"></Button>
        <Button
            android:id="@+id/bTan"
            style="@style/buttonOperator"
            android:text="tan"></Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/b1"
            style="@style/buttonNumber"
            android:text="1"></Button>
        <Button
            android:id="@+id/b2"
            style="@style/buttonNumber"
            android:text="2"></Button>
        <Button
            android:id="@+id/b3"
            style="@style/buttonNumber"
            android:text="3"></Button>
        <Button
            android:id="@+id/bPlus"
            style="@style/buttonOperator"
            android:text="+"></Button>
        <Button
            android:id="@+id/bLog10"
            style="@style/buttonOperator"
            android:text="Log 10"></Button>
    </LinearLayout>
    <LinearLayout
        style="@style/buttonRow">
        <Button
            android:id="@+id/b0"
            style="@style/buttonOperator"
            android:layout_weight="2"
            android:text="0"></Button>
        <Button
            android:id="@+id/bDecimal"
            style="@style/buttonOperator"
            android:text="."></Button>
        <Button
            android:id="@+id/bEquals"
            style="@style/buttonOperator"
            android:onClick="equalsAction"
            android:text="="/>
        <Button
            android:id="@+id/bLn"
            style="@style/buttonOperator"
            android:text="ln"></Button>
    </LinearLayout>



</LinearLayout>

